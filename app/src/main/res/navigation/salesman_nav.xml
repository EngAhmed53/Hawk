<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salesman_nav"
    app:startDestination="@id/fragment_sales_home">

    <fragment
        android:id="@+id/fragment_sales_home"
        tools:layout="@layout/fragment_sales_home"
        android:name="com.shouman.apps.hawk.ui.main.salesUI.home.Fragment_sales_home"
        android:label="Fragment_sales_home" >
        <action
            android:id="@+id/action_fragment_sales_home_to_dialogFragment_add_new"
            app:destination="@id/dialogFragment_add_new" />
    </fragment>
    <fragment
        android:id="@+id/fragment_add_new_customer"
        tools:layout="@layout/fragment_add_new_customer"
        android:name="com.shouman.apps.hawk.ui.main.salesUI.add.newCustomerFragments.Fragment_add_new_customer"
        android:label="Fragment_add_new_customer" >
        <action
            android:id="@+id/action_fragment_add_new_customer_to_fragment_pick_customer_location"
            app:destination="@id/fragment_pick_customer_location"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <dialog
        android:id="@+id/dialogFragment_add_new"
        android:name="com.shouman.apps.hawk.ui.main.salesUI.add.DialogFragment_add_new"
        tools:layout="@layout/dialog_fragment_add_new"
        android:label="" >
        <action
            android:id="@+id/action_dialogFragment_add_new_to_fragment_add_new_customer"
            app:destination="@id/fragment_add_new_customer"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </dialog>
    <fragment
        android:id="@+id/fragment_pick_customer_location"
        tools:layout="@layout/fragment_pick_location"
        android:name="com.shouman.apps.hawk.ui.main.salesUI.add.newCustomerFragments.Fragment_pick_customer_location"
        android:label="Fragment_pick_customer_location" >
        <action
            android:id="@+id/action_fragment_pick_customer_location_to_fragment_sales_home"
            app:destination="@id/fragment_sales_home"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/fragment_sales_home"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>