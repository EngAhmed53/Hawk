                            app:layout_constraintStart_toEndOf="@+id/icon2"
                            app:layout_constraintTop_toBottomOf="@+id/customer_phone_title_txt"
                            tools:text="01028700014" />

                        <TextView
                            android:id="@+id/customer_phone_title_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
