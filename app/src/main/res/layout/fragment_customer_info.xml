                        android:textColor="@color/colorAccent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/visits_log"
                        app:layout_constraintStart_toStartOf="@+id/visits_log"
                        app:layout_constraintTop_toBottomOf="@+id/visits_log" />

