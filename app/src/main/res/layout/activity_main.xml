<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--home layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.main.companyUi.MainActivity">

            <FrameLayout
                android:id="@+id/home_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <nl.joery.animatedbottombar.AnimatedBottomBar
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:elevation="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_nav_bar_background"
                app:abb_selectedTabType="icon"
                app:abb_indicatorAppearance="round"
                app:abb_indicatorColor="@color/old_rose"
                app:abb_indicatorHeight="2dp"
                app:abb_indicatorMargin="16dp"
                app:abb_tabs="@menu/company_bottom_navigation_menu"
                app:abb_selectedIndex="0"
                app:abb_animationInterpolator="@android:anim/accelerate_decelerate_interpolator"
                app:abb_tabColor="@color/white"
                app:abb_tabColorSelected="@color/old_rose"
                app:abb_textAppearance="@style/bottom_nav_bar_text_style"
                app:abb_rippleEnabled="true"
                app:abb_rippleColor="@color/old_rose_dark"
                app:abb_tabAnimation="slide"
                app:abb_tabAnimationSelected="fade"
                app:abb_indicatorLocation="top"
                app:abb_indicatorAnimation="slide" />


        </LinearLayout>

        <!--for non home fragments-->
        <FrameLayout
            android:id="@+id/full_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </FrameLayout>


</layout>
