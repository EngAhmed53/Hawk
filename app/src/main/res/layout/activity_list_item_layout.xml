<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:rippleColor="?colorControlHighlight"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/type_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:backgroundTint="#4CAF50">

                <ImageView
                    android:id="@+id/activity_type_img"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/activity_type"
                    android:scaleType="center"
                    android:tint="@color/white"
                    tools:src="@drawable/ic_redo" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:fontFamily="sans-serif-medium"
                android:id="@+id/activity_type_txt"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toTopOf="@+id/activity_body_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/type_card_view"
                app:layout_constraintTop_toTopOf="@+id/type_card_view"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="New Customer" />

            <TextView
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:id="@+id/activity_body_txt"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gray1"
                app:layout_constraintBottom_toBottomOf="@+id/type_card_view"
                app:layout_constraintEnd_toStartOf="@id/activity_time_txt"
                app:layout_constraintStart_toStartOf="@+id/activity_type_txt"
                app:layout_constraintTop_toBottomOf="@+id/activity_type_txt"
                tools:text="Ahmed added new customer name ali" />


            <TextView
                android:id="@+id/activity_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center"

                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/gray1"
                app:layout_constraintBottom_toBottomOf="@+id/activity_body_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_body_txt"
                app:layout_constraintTop_toTopOf="@+id/activity_type_txt"
                tools:text="13:30" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
