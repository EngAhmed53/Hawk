<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.shouman.apps.hawk.ui.main.OnCustomerItemClickHandler" />

        <variable
            name="onCustomerClickListener"
            type="OnCustomerItemClickHandler" />

        <variable
            name="customerUID"
            type="String" />

        <variable
            name="customerName"
            type="String" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white2"
        android:backgroundTintMode="src_over"
        app:rippleColor="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> onCustomerClickListener.onCustomerItemClickHandler(customerUID, customerName)}"
        android:stateListAnimator="@animator/branch_list_item_anim"
        app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/company_name_txt"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/customer_image"
                app:layout_constraintTop_toTopOf="@+id/customer_image"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Ahmed Shouman" />

            <TextView
                android:id="@+id/company_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gray1"
                app:layout_constraintBottom_toBottomOf="@+id/customer_image"
                app:layout_constraintEnd_toEndOf="@+id/customer_name_txt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/customer_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_txt"
                tools:text="Qebaa Company" />

            <TextView
                android:id="@+id/time_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/gray1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/customer_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/img_new_label"
                tools:text="12:00 PM" />


            <ImageView
                android:id="@+id/img_new_label"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/new_customer_label"
                android:src="@drawable/ic_new_label"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/time_added"
                app:layout_constraintEnd_toEndOf="@+id/time_added"
                app:layout_constraintStart_toStartOf="@+id/time_added"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/customer_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/two_letters_background"
                android:contentDescription="@string/customer_image"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="ZZ" />

            <View
                android:id="@+id/label_view"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/gray1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.84"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
