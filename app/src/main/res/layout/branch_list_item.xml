                android:gravity="center"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/child_rec_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Main Branch" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/branch_menu"
                android:scaleType="center"
                android:src="@drawable/ic_info"
                android:tint="@color/old_rose"
                app:layout_constraintBottom_toBottomOf="@id/branch_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/branch_name"
                app:layout_constraintTop_toTopOf="@id/branch_name" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/child_rec_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/branch_name"
                app:setParentPosition="@{parentPosition}"
                app:setSalesMap="@{saleMembers}"
                tools:listitem="@layout/sales_list_item_layout" />

