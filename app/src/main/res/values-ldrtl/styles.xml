<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="no_action_bar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="no_action_bar.transparentStatusBar" parent="no_action_bar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="materialInputLayoutCustomColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/material_input_layout_stroke_colors</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="materialAutoCompleteCustomColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/material_input_layout_stroke_colors</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="bottom_nav_bar_text_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white2</item>
    </style>
    \
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
